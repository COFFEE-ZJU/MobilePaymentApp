<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zju.mobilepaymentapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zju.mobilepaymentapp.TransactionListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zju.mobilepaymentapp.TransactionDetailActivity"
            android:label="@string/title_transaction_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TransactionListActivity" />
        </activity>
        <activity
            android:name="com.zju.mobilepaymentapp.PaymentActivity" 
            android:label="@string/title_make_payment" >
		</activity>
		<activity
            android:name="com.zju.mobilepaymentapp.ConfirmtActivity" 
            android:label="@string/title_confirm" >
		</activity>
		<activity
            android:name="com.zju.mobilepaymentapp.CommentActivity" 
            android:label="@string/title_comment" >
		</activity>
		<activity
            android:name="com.zju.mobilepaymentapp.RefundActivity" 
            android:label="@string/title_refund" >
		</activity>
    </application>

</manifest>
